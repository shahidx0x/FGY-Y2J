
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 0;
        text-align: center;
      }

      .container {
        max-width: 600px;
        margin: 20px auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
      }

      h1 {
        margin: 0;
        font-size: 28px;
        font-weight: bold;
        color: #333;
      }

      p {
        font-size: 16px;
        color: #555;
        line-height: 1.5;
        margin: 10px 0;
      }

      table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2;
      }

      .signature {
        margin-top: 30px;
        border-top: 1px solid #ddd;
        padding-top: 20px;
        font-size: 14px;
        color: #777;
      }
      .company {
     
        display: flex;
        font-size: 1rem
        
      }
      .subcompany{
        font-weight: 100;
        margin-left: 4px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 style="text-decoration: underline">Invoice</h1>

      <!-- Company Information -->
      <p style="display: flex; font-size: 3rem"><%= company.name %></p>
      <p style="display: flex; margin-top: -1rem;font-size: 10px;">
        <strong><%= company.address %>
      </p>
      <div class="">
        <div>
          <p class="company"><strong>Invoice ID:</strong> <%= invoiceNumber%></p>
          <p class="company">Company Name : <span class="subcompany"><%= companyName %></span></p>
        </div>
      </div>

      <!-- Order Information -->
      <div style="display: flex; margin-top: 5rem; justify-content: space-between;">
        <div>
          <p class="company" style="margin-top: -9px;"><strong>Name:</strong> <span class="subcompany"><%= clientName%></span></p>
          <p class="company" style="margin-top: -9px;"><strong>Address:</strong> <span class="subcompany"><%= clientAddress %></span></p>
          <p class="company" style="margin-top: -9px;"><strong>Email:</strong> <span class="subcompany"><%= clientEmail %></span></p>
          <p class="company" style="margin-top: -9px;"><strong>Contact:</strong> <span class="subcompany"><%= clientEmail  %></span></p>
        </div>
        <div style="margin-top: 30px;">
          <p style="font-size: 12px;"><strong>Order Time:</strong> <span class="subcompany"><%=  createdDate %></span></p>
          <p style="margin-top: -9px; font-size: 12px;"><strong>Pickup Time:</strong> <span class="subcompany"><%= dueDate %></span></p>
        </div>
      </div>
    
      <!-- Invoice Items -->
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(item,index) { %>
            <tr>
              <td><%= item.index %></td>
              <td><%= item.name %></td>
              <td><%= item.quantity %></td>
              <td>$<%= item.price.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Invoice Total -->
      <p style="text-align: right"><strong>Total:</strong> $<%= total.toFixed(2) %></p>
    </div>
  </body>
</html>
